@using MvcTatilSeyahat.Models.Sınıflar
@model List<Harika>

@{
    ViewBag.Title = "AntikHarika";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Folio Bootstrap Template - Blog Grid</title>
    <meta content="" name="descriptison">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/webharika/assets/img/favicon.png" rel="icon">
    <link href="~/webharika/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,300i,400,400i,500,500i,600,600i,700,700i|Playfair+Display:400,400i,500,500i,600,600i,700,700i,900,900i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/webharika/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/webharika/assets/vendor/hover/hover.min.css" rel="stylesheet">
    <link href="~/webharika/assets/vendor/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="~/webharika/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/webharika/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <!-- Template Main CSS File -->
    <link href="assets/css/style.css" rel="stylesheet">
</head>

<body>
    <main id="main">

        <!-- ======= Blog Grid ======= -->
        <div id="journal-blog" class="text-left  paddsections">

            <div class="container">
                <div class="section-title text-center">
                    <h2>Antik Dünya'nın Yedi Harikası</h2>
                </div>
            </div>

            <div class="container">
                <div class="journal-block">
                    <div class="row">
                        @foreach (var x in Model)
                        {
                            <div class="col-lg-4 col-md-6">

                                <div class="journal-info mb-30">
                                    <a href="/Rehber/AntikHarikaDetay/@x.ID"><img src="@x.IMAGE" class="img-responsive" alt="img" style="width:335px; height:150px;"></a>
                                    <div class="journal-txt">
                                        <h4><a>@x.BASLIK</a></h4>
                                        <p class="separator">
                                            @x.ACIKLAMA.Substring(0, 100)... <a href="/Rehber/AntikHarikaDetay/@x.ID">Devamını Oku</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>

