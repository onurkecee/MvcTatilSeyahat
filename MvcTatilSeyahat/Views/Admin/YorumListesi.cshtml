@using MvcTatilSeyahat.Models.Sınıflar
@model List<Yorum>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KULLANICI ADI</th>
        <th>MAİL</th>
        <th>YORUM</th>
        <th>BLOG</th>
        <th>İŞLEMLER</th>
    </tr>

    @foreach (var x in Model)
    {
    <tr>
        <td>@x.KULLANICIADI</td>
        <td>@x.MAIL</td>
        <td>@x.YORUM</td>
        <td>@x.BLOG.BASLIK</td>
        <td>
            <a href="/Admin/YorumSil/@x.ID" class="btn btn-danger" title="Sil"><div class="fa fa-times"></div></a>
            <a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning" title="Güncelle"><div class="fa fa-recycle"></div></a>
        </td>
    </tr>
    }

</table>

