@using MvcTatilSeyahat.Models.Sınıflar
@model List<Yorum>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr style="background-color:#808080; color:white;">
        <th>KULLANICI ADI</th>
        <th>MAİL</th>
        <th>YORUM</th>
        <th>BLOG</th>
        <th>İŞLEMLER</th>
    </tr>

    @foreach (var x in Model)
    {
        if (x.YORUMONAY == false)
        {
            <tr style="background-color:#ff8c69; color:white;">
                <td>@x.KULLANICIADI</td>
                <td>@x.MAIL</td>
                <td>@x.YORUM</td>
                <td>@x.BLOG.BASLIK</td>
                <td>
                    <a href="/Admin/YorumSil/@x.ID" class="btn btn-danger" title="Sil"><div class="fa fa-times"></div></a>
                    <a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning" title="Yorum Detay"><div class="fa fa-recycle"></div></a>

                </td>
            </tr>
        }
        if (x.YORUMONAY == true)
        {
            <tr style="background-color:#00cd66; color:white;">
                <td>@x.KULLANICIADI</td>
                <td>@x.MAIL</td>
                <td>@x.YORUM</td>
                <td>@x.BLOG.BASLIK</td>
                <td>
                    <a href="/Admin/YorumSil/@x.ID" class="btn btn-danger" title="Sil"><div class="fa fa-times"></div></a>
                    <a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning" title="Yorum Detay"><div class="fa fa-recycle"></div></a>

                </td>
            </tr>
        }

    }

</table>

